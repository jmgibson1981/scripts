[Unit]
Description = Starts Docker Containers Via Script
After = snap.docker.dockerd.service
Requires = snap.docker.dockerd.service

[Service]
User = root
Group = root
Type = oneshot
ExecStart = /usr/local/bin/dockerstarter %i
ExecStop = /snap/bin/docker stop %i
RemainAfterExit = yes

[Install]
WantedBy = multi-user.target

